{
  "name": "eslint-config-airbnb-typescript-vue",
  "version": "1.0.0",
  "description": "Airbnb Base Vue Typescript config",
  "license": "MIT",
  "author": "JosÃ© Manuel Casani Guerra <jmpl3.soporte@gmail.com>",
  "main": "index.js",
  "scripts": {
    "format": "yarn run format:package && yarn run format:prettier && yarn run format:eslint",
    "format:eslint": "eslint --fix .",
    "format:package": "prettier-package-json --write",
    "format:prettier": "prettier --write \"**/*.{js,json,md,yml}\"",
    "lint": "eslint ./",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "validate": "yarn run lint"
  },
  "dependencies": {
    "eslint": "^7.30.0",
    "eslint-config-airbnb-typescript-base": "^2.0.3",
    "eslint-plugin-vue": "^7.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "pinst": "^2.1.6",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "typescript": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  }
}
